{
  "include": [
    "./index.d.ts",
    "./default/**/*.js",
    "./settings/**/*.js",
    "./widgets/**/*.js"
  ],
  "compilerOptions": {
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./",
    "outDir": "./types",
    "strict": true,
    "strictNullChecks": true
  }
}
