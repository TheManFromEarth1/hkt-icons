{
  "include": [
    "./index.d.ts",
    "./default/**/*.js",
    "./settings/**/*.js",
    "./widgets/**/*.js"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
